<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Due date</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.due_date %></td>
        <td><%= item.priority %></td>
        <td><%= link_to 'Show', item, class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>
